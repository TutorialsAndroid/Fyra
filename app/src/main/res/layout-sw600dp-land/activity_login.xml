<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="520dp"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardElevation="@dimen/margin_16"
        app:cardCornerRadius="32dp"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/margin_56">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/login_screen_logo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="@dimen/margin_16"
                android:layout_marginStart="@dimen/margin_16"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:contentDescription="@null"
                android:src="@drawable/logo_shadow" />

            <TextView
                android:id="@+id/login_screen_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_screen_logo"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/margin_16"
                android:layout_marginStart="@dimen/margin_16"
                android:shadowColor="#55000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="3"
                android:text="@string/login_screen_title"
                android:textSize="26sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/login_email_input_layout"
                android:layout_width="420dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_screen_title"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_16"
                android:layout_marginEnd="@dimen/margin_16"
                android:hint="@string/login_email_input_layout_hint"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="@dimen/twelve"
                app:boxCornerRadiusBottomStart="@dimen/twelve"
                app:boxCornerRadiusTopEnd="@dimen/twelve"
                app:boxCornerRadiusTopStart="@dimen/twelve"
                app:boxStrokeColor="@color/teal_700"
                app:boxStrokeWidth="2dp"
                app:boxStrokeWidthFocused="3dp"
                app:startIconDrawable="@drawable/baseline_email_24"
                app:startIconTint="@color/teal_700">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/login_email_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/padding_16"
                    android:paddingStart="@dimen/padding_56"
                    android:textColor="@android:color/black" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/login_password_input_layout"
                android:layout_width="420dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_email_input_layout"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_16"
                android:layout_marginEnd="@dimen/margin_16"
                android:hint="@string/login_password_input_layout_hint"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="@dimen/twelve"
                app:boxCornerRadiusBottomStart="@dimen/twelve"
                app:boxCornerRadiusTopEnd="@dimen/twelve"
                app:boxCornerRadiusTopStart="@dimen/twelve"
                app:boxStrokeColor="@color/teal_700"
                app:boxStrokeWidth="2dp"
                app:boxStrokeWidthFocused="3dp"
                app:endIconMode="password_toggle"
                app:endIconTint="@color/teal_700"
                app:startIconDrawable="@drawable/baseline_lock_24"
                app:startIconTint="@color/teal_700">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/login_password_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:padding="16dp"
                    android:paddingStart="56dp"
                    android:textColor="@android:color/black" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/login_btn"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_password_input_layout"
                android:layout_centerInParent="true"
                android:padding="@dimen/padding_16"
                app:backgroundTint="@color/teal_700"
                app:cornerRadius="@dimen/sixteenth"
                android:layout_marginStart="@dimen/margin_16"
                android:layout_marginEnd="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_8"
                android:text="@string/login_btn_text"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/login_create_account_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_btn"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/margin_16"
                android:layout_marginEnd="@dimen/margin_20"
                android:layout_marginStart="@dimen/margin_20"
                android:text="@string/login_create_account_text"
                android:textSize="18sp"
                android:textColor="@android:color/holo_orange_dark"
                android:shadowColor="#55000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="3"
                android:textAlignment="center"
                android:gravity="center"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/login_create_account_btn"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_create_account_text"
                android:layout_centerInParent="true"
                android:padding="@dimen/padding_16"
                app:backgroundTint="@android:color/holo_red_light"
                app:cornerRadius="@dimen/sixteenth"
                android:layout_marginStart="@dimen/margin_16"
                android:layout_marginEnd="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginBottom="@dimen/margin_16"
                android:text="@string/login_create_account_btn_text"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>



</RelativeLayout>